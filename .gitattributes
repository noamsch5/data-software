# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# Documentation
*.md text diff=markdown
*.txt text

# Data files
*.csv text diff=csv
*.json text diff=json
*.yaml text diff=yaml
*.yml text diff=yaml

# Config files
*.ini text
*.cfg text
*.conf text

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.db binary
*.parquet binary
*.xlsx binary
*.xls binary
*.pdf binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary 