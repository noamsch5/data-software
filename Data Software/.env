# הגדרות מסד נתונים
DB_PATH=streaming_data.db
MVP_DB_PATH=mvp.db

# נתיבים לתיקיות
DATA_DIR=data_raw
MODELS_DIR=models
OUTPUT_DIR=output
FORECAST_DIR=output/forecasts

# הגדרות לוגים
LOG_LEVEL=INFO
LOG_FILE=app.log

# הגדרות מודל
FORECAST_HORIZON=12  # חודשים
TRAIN_TEST_SPLIT=0.8
RANDOM_STATE=42

# הגדרות ETL
WATCH_FOLDER=input
PROCESSED_FOLDER=data_raw
BACKUP_FOLDER=backups

# הגדרות Dashboard
DASHBOARD_PORT=8501
DASHBOARD_HOST=localhost

# הגדרות מודל Prophet
PROPHET_GROWTH=linear
PROPHET_SEASONALITY_MODE=multiplicative
PROPHET_CHANGEPOINT_PRIOR_SCALE=0.05

# הגדרות מודל XGBoost
XGB_MAX_DEPTH=6
XGB_LEARNING_RATE=0.1
XGB_N_ESTIMATORS=100

# הגדרות מודל LSTM
LSTM_UNITS=50
LSTM_DROPOUT=0.2
LSTM_EPOCHS=100
LSTM_BATCH_SIZE=32
